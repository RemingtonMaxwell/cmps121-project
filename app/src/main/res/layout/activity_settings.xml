<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/RelativeLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:minHeight="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:minHeight="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:minHeight="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:minHeight="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view4"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editFirstName"
        android:layout_above="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:visibility="visible"
        android:onClick="updateInfo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/textView2"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/textView3"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView4"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView5"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/firstNameText"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/lastNameText"
        android:layout_alignStart="@+id/lastNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lastNameText"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/updateButton"
        android:layout_alignEnd="@+id/updateButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/userNameText"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/lastNameText"
        android:layout_alignStart="@+id/lastNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/emailText"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/userNameText"
        android:layout_alignStart="@+id/userNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/textView10"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/textView11"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView12"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView13"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/emailEtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Settings"
        android:id="@+id/textView14"
        android:layout_below="@+id/view4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameEtext"
        android:background="@drawable/textinputborder"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_above="@+id/textView11"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:layout_alignLeft="@+id/updateButton"
        android:layout_alignStart="@+id/updateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameEtext"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/firstNameEtext"
        android:layout_alignStart="@+id/firstNameEtext"
        android:background="@drawable/textinputborder"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_alignRight="@+id/firstNameEtext"
        android:layout_alignEnd="@+id/firstNameEtext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameEtext"
        android:background="@drawable/textinputborder"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/lastNameEtext"
        android:layout_alignStart="@+id/lastNameEtext"
        android:layout_alignRight="@+id/lastNameEtext"
        android:layout_alignEnd="@+id/lastNameEtext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailEtext"
        android:background="@drawable/textinputborder"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/userNameEtext"
        android:layout_alignStart="@+id/userNameEtext"
        android:layout_alignRight="@+id/passwordEtext"
        android:layout_alignEnd="@+id/passwordEtext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEtext"
        android:layout_above="@+id/updateButton"
        android:layout_alignLeft="@+id/userNameEtext"
        android:layout_alignStart="@+id/userNameEtext"
        android:background="@drawable/textinputborder"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/passwordEtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>